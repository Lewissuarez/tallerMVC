extends ./layout/index

block contenido
    table(class="table")
        thead
            tr
                th(scope="col") Referencia
                th(scope="col") Nombre
                th(scope="col") Precio
                th(scope="col") Cantidad
                th(scope="col") Descripcion
        tbody
            each producto in productos
                tr
                    th(scope="row")=producto.referencia
                    td=producto.nombre
                    td=producto.precio + "/COP"
                    td=producto.cantidad
                    td=producto.descripcion