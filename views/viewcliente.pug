extends ./layout/index

block contenido
    form(action="/clientes" method="POST")
        .mb-2
            label(for="nombreCliente", class="form-label") Nombre
            input(type="text" class="form-control", id="nombreCliente" placeholder="Nombre(s)" required)

        .mb-2
            label(for="apellidoCliente", class="form-label") Apellidos
            input(type="text" class="form-control", id="apellidoCliente" placeholder="Apellido(s)" required)
        .mb-2
            label(for="docCliente", class="form-label") Documento
            input(type="text" class="form-control", id="docCliente" placeholder="Doc. de indentidad" required)
        .mb-2
            label(for="correoCliente", class="form-label") Correo
            input(type="email" class="form-control", id="correoCliente" placeholder="correo@correo.com" required)
        .mb-2
            label(for="direccionCliente", class="form-label") Direccion
            input(type="text" class="form-control", id="direccionCliente" placeholder="Direccion" required)
        .mb-2
            label(for="telefonoCliente", class="form-label") Telefono
            input(type="text" class="form-control", id="telefonoCliente" placeholder="Telefono" required)
  
        button(type="submit", class="btn btn-primary") Guardar